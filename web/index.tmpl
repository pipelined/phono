<html>

<head>
    <title></title>
</head>

<body>
    <form enctype="multipart/form-data" method="post">

        <p><input type="file" name="convertfile" accept="{{.Accept}}"/></p>
            
        <fieldset id="format">
            {{range $key, $value := .OutFormats}}
                <input type="radio" id="{{ $value }}" value="{{ $value }}" name="format">
                <label for="{{ $value }}">{{ $value }}</label>
            {{end}}
        </fieldset>

        <p>wav options</p>
        <fieldset id="wav-bit-depth">
            {{range $key, $value := .WavOptions.BitDepths}}
                <input type="radio" id="{{ $key }}" value="{{ $key }}" name="wav-bit-depth">
                <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>

        <p>mp3 options</p>
        <fieldset id="mp3-bit-rate-mode">
            {{range $key, $value := .Mp3Options.BitRateModes}}
                <input type="radio" id="{{ printf "%d" $key }}" value="{{ printf "%d" $key }}" name="mp3-bit-rate-mode">
                <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        <fieldset id="mp3-channel-mode">
            {{range $key, $value := .Mp3Options.ChannelModes}}
                <input type="radio" id="{{ $key }}" value="{{ $key }}" name="mp3-channel-mode">
                <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        <fieldset id="mp3-bit-rate">
            {{range $value := .Mp3Options.BitRates}}
                <input type="radio" id="{{ $value }}" value="{{ $value }}" name="mp3-bit-rate">
                <label for="{{ $value }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        <fieldset id="mp3-vbr-quality">
            {{range $key, $value := .Mp3Options.VBRQualities}}
                <input type="radio" id="{{ $key }}" value="{{ $key }}" name="mp3-vbr-quality">
                <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        <input type="checkbox" name="mp3-define-quality" value="true">define quality<br>
        <fieldset id="mp3-quality">
            {{range $key, $value := .Mp3Options.Qualities}}
                <input type="radio" id="{{ $key }}" value="{{ $key }}" name="mp3-quality">
                <label for="{{ $key }}">{{ $value }}</label>
            {{end}}
        </fieldset>
        
        <input type="submit" value="convert">
    </form>
</body>

</html>